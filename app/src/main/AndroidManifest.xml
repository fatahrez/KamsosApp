<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.lukmo.kamsos">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_kamsos"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_kamsos_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:targetApi="n">
        <activity android:name=".UserInterface.VetSuccessActivity"></activity>
        <activity android:name=".UserInterface.VetDetailActivity" />
        <activity android:name=".UserInterface.AgrovetActivity" />
        <activity android:name=".UserInterface.VetActivity" />
        <activity android:name=".UserInterface.HomeActivity" />
        <activity android:name=".UserInterface.ProfileActivity" />
        <activity
            android:name=".UserInterface.MainActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>