<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.HomeActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/linear_bottombar"
        android:layout_marginBottom="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/linear_layout_vet"
        android:layout_marginTop="16dp"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/to_vet_card_view"
            android:layout_width="match_parent"
            android:layout_height="234sp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="@dimen/activity_horizontal_margin"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Request Animal Specialist"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Badge"
                android:textSize="24sp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear_layout_agrovet"
        android:layout_below="@id/linear_layout_vet"
        android:layout_marginTop="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/to_agrovet_card_view"
            android:layout_width="match_parent"
            android:layout_height="234sp"
            android:clickable="true"
            app:cardBackgroundColor="@android:color/darker_gray"
            app:cardCornerRadius="@dimen/activity_horizontal_margin"
            android:focusable="true">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.MaterialComponents.Badge"
                android:text="Buy drugs"
                android:textSize="24sp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <include
            android:id="@+id/navigation"
            layout="@layout/element_bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


</RelativeLayout>